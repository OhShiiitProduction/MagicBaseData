<Window x:Class="MagicBaseData.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MagicBaseData"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Join"  Grid.Row="1" Click="Button_Click" BorderBrush="Blue"/>
        <local:PasswordText x:Name="passwordText" Grid.Row="0" BorderBrush="Blue" FontSize="20"/>
    </Grid>
</Window>
